{% extends 'base.html.twig' %}

{% block title %}Modifier l'annonce "{{ ad.title }}"{% endblock %}

{% form_theme form 'ad/_collection.html.twig' %}

{% block body %}
<div class="container">
    <h1 class="text-center">Modifier l'annonce "{{ ad.title }}"</h1>
    <div class="form-group">
        {{ form_start(form) }}
        {{ form_widget(form) }}

        <button class="btn btn-primary btn-block">Enregistrer les modifications</button>
        {{ form_end(form) }}
    </div>
</div>
{% endblock %}

{% block javascripts %}
<script src="/js/ad.js"></script>
{% endblock %}

